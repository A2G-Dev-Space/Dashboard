# ============================================
# AI Services Dashboard Configuration
# ============================================
# 이 파일을 .env로 복사하여 환경에 맞게 수정하세요
# cp .env.example .env

# ============================================
# Server Configuration
# ============================================

# 서버 호스트 (IP 또는 DNS)
# 기본값: 0.0.0.0 (모든 인터페이스에서 수신)
SERVER_HOST=0.0.0.0

# 메인 프록시 포트 (Nginx)
# Dashboard, API, Docs가 모두 이 포트를 통해 서빙됩니다
PROXY_PORT=4090

# PostgreSQL 외부 포트 (디버깅/직접 접근용)
POSTGRES_PORT=4091

# Redis 외부 포트 (디버깅/직접 접근용)
REDIS_PORT=4092

# API 내부 포트 (컨테이너 간 통신용, 일반적으로 변경 불필요)
API_PORT=3000

# Dashboard 내부 포트 (컨테이너 간 통신용, 일반적으로 변경 불필요)
DASHBOARD_PORT=80

# ============================================
# Database Configuration
# ============================================

POSTGRES_DB=nexuscoder
POSTGRES_USER=nexuscoder
POSTGRES_PASSWORD=nexuscoder123

# DATABASE_URL은 docker-compose에서 자동 생성됩니다
# 수동 설정이 필요한 경우:
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# ============================================
# Redis Configuration
# ============================================

REDIS_HOST=redis
REDIS_PASSWORD=

# REDIS_URL은 docker-compose에서 자동 생성됩니다
# 수동 설정이 필요한 경우:
# REDIS_URL=redis://redis:6379

# ============================================
# Security Configuration
# ============================================

# JWT 시크릿 키 (프로덕션에서 반드시 변경!)
JWT_SECRET=your-jwt-secret-change-in-production

# 세션 쿠키 보안 설정
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# ============================================
# Admin Configuration
# ============================================

# Admin Dashboard 기본 로그인 (SSO 미사용 시)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=aidivn

# 개발자 목록 (쉼표로 구분, SUPER_ADMIN 권한 자동 부여)
DEVELOPERS=syngha.han

# ============================================
# SSO Configuration
# ============================================

# SSO 서버 URL
SSO_BASE_URL=https://genai.samsungds.net:36810

# SSO 인증서 경로 (컨테이너 내부 경로)
SSO_CERT_PATH=/app/cert/cert.cer

# ============================================
# Service Configuration
# ============================================

# 기본 서비스 ID (마이그레이션 시 사용)
DEFAULT_SERVICE_ID=nexus-coder

# 기본 서비스 이름
DEFAULT_SERVICE_NAME=nexus-coder

# 기본 서비스 표시 이름
DEFAULT_SERVICE_DISPLAY_NAME=Nexus Coder

# ============================================
# External URLs (Optional)
# ============================================

# 외부에서 접근하는 URL (프록시/로드밸런서 뒤에 있는 경우)
# API_URL=https://your-domain.com/api
# DASHBOARD_URL=https://your-domain.com

# ============================================
# Proxy Configuration (내부망용)
# ============================================

# HTTP 프록시 (빌드 시 외부 패키지 다운로드용)
HTTP_PROXY=
HTTPS_PROXY=

# 프록시 제외 목록
NO_PROXY=localhost,127.0.0.1,.samsungds.net,postgres,redis,api,dashboard,nginx

# TLS 인증서 검증 비활성화 (내부망 환경)
NODE_TLS_REJECT_UNAUTHORIZED=0

# ============================================
# Logging Configuration
# ============================================

# 로그 레벨 (debug, info, warn, error)
LOG_LEVEL=info

# API 요청 로깅 활성화
LOG_API_REQUESTS=true
